<% include ../partials/header %>
  <div class="row">

  </div>
  <h1>Edit comment</h1>
  <div class="">
    <form class="form" action="/campgrounds/<%= campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Comment</label>
        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" placeholder="Comment">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary" type="submit" name="button">Edit</button>
      </div>
    </form>
    <a href="/campgrounds">Go back</a>
  </div>

