<% include ../partials/header %>
  <div class="row">

  </div>
  <h1>Edit <%= campground.name %></h1>
  <div class="">
    <form class="form" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" placeholder="Name">
      </div>
      <div class="form-group">
        <label for="name">Price</label>
        <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" placeholder="Price" min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" placeholder="Description">
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" placeholder="Image url">
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary" type="submit" name="button">Submit !</button>
      </div>
    </form>
    <a href="/campgrounds">Go back</a>
  </div>
<% include ../partials/footer %>
