<% include ../partials/header %>
  <div class="row">

  </div>
  <h1>Create a new campground</h1>
  <div class="">
    <form class="" action="/campgrounds" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" value="" placeholder="Name">
      </div>
      <div class="form-group">
        <label for="name">Price</label>
        <input class="form-control" type="number" name="price" value="" placeholder="Price" min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" type="text" name="description" value="" placeholder="Description">
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input class="form-control" type="text" name="image" value="" placeholder="Image url">
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary" type="submit" name="button">Submit !</button>
      </div>
      <a href="/campgrounds">Go back</a>
    </form>
  </div>

<% include ../partials/footer %>
